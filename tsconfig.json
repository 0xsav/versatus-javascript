{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["*.ts", "lib/**/*.ts", "test/**/*.ts", "examples/**/*.ts", "cli.cts"],
  "exclude": ["node_modules"]
}
